#!/usr/bin/env perl

use warnings;
use strict;
use Data::Dumper;
use DBI;
use FindBin qw($Bin $Script);
use Daemon::Generic;


use lib "$Bin/../lib";
use Outspam;

my $conf = {
  'imaplog' => '',
  'domain' => '',
  'imap_bookmark'=> '',
  'db' => '',
  'dbhost' => '',
  'dbuser'=> '',
  'dbpassword' => '',
};


my $verbose = grep (/--verbose/, @ARGV) ? 1 : 0;
my $nodetach = grep (/--nodetach$/, @ARGV) ? 1 : 0;

my $config_file = "$Bin/../etc/outspam.conf";
read_config($config_file,$conf);

my $conn = db_connect($conf);

newdaemon(
            progname        => 'imaplogd',
            pidfile         => '/home/eu/tmp/imaplog.pid',
            configfile      => '/home/eu/src/outspam/etc/outspam.conf',
     );


sub gd_run
     {
         while(1) {
               sleep(5);
               proc_main($conf);              
            }
     }

#daemonize() unless $nodetach;
